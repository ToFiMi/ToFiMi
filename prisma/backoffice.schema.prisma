generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/backoffice"
}

datasource db {
  provider = "postgresql"
  url      = env("BACKOFFICE_DATABASE_URL")
}

model School {
  id        String   @id
  name      String
  db_url    String
  createdAt DateTime @default(now())
  memberships SchoolMembership[]
}
model BackofficeUser {
  id       String   @id @default(cuid())
  email    String   @unique
  password String   // hashed password (napr. bcrypt)
  name     String
  role     Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  SUPPORT
}

model SchoolMembership {
  id        String   @id @default(cuid())
  school    School   @relation(fields: [schoolId], references: [id])
  schoolId  String
  user      UserAccount @relation(fields: [userId], references: [id])
  userId    String
  role      Role
}

model UserAccount {
  id          String             @id @default(cuid())
  email       String             @unique
  password    String
  memberships SchoolMembership[]
}
