generator client {
  provider = "prisma-client-js"
  output   = "../prisma/generated/backoffice"
}

datasource db {
  provider = "postgresql"
  url      = env("BACKOFFICE_DATABASE_URL")
}

model School {
  id        String   @id
  name      String
  db_url    String
  createdAt DateTime @default(now())
}
model BackofficeUser {
  id       String   @id @default(cuid())
  email    String   @unique
  password String   // hashed password (napr. bcrypt)
  name     String
  role     Role     @default(ADMIN)
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  SUPPORT
}
